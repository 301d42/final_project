<!DOCTYPE html>
<html lang="en">
  <%- include('../layout/head') %>
  <body>
    <%- include('../layout/header') %>
    <main>
      <aside>
        <%- include('../layout/nav') %>
     
      <section id="hero">
        <h2> My Recipes</h2>
        <ul>
          <% recipes.forEach(recipe => { %>
            <li class="cards">
              <%- include('../layout/card', {recipe: recipe}) %>
              <button><a href="/recipe/<%= recipe.id %>">View Details</a></button>
            </li>
          <% }); %>
        </ul>
      </section>
      <aside>
        <%# include('./layout/ads') %>
      </aside>
    </main>
    <footer>
      <% include('../layout/footer') %>
    </footer>
  </body>
</html>