<!DOCTYPE html>
<html lang="en">
  <%- include('../layout/head') %>
  <body>
    <%- include('../layout/header') %>
    <main>
      <aside class="left">
        <%- include('../layout/nav') %>
      </aside>
      <section id="hero">
        <h2> Search Results</h2>
        <ul>
          <% recipes.forEach(recipe => { %>  
            <li class="cards">
              <%- include('../layout/card', {recipe: recipe}) %>

              <ul class="ingredients hide <%= recipe.recipe_name.replace(' ', '_') %>">
                <% recipe.ingredients.forEach( ingredient =>{ %>
                  <li class="ingredient-li"><%= ingredient %></li>
                <% }); %>
              </ul>

              <ul class="nutrients hide <%= recipe.recipe_name.replace(' ', '_') %>">
                <li>Total Fat: <%= recipe.total_fat %>g</li>
                <li>Saturated Fat: <%= recipe.saturated_fat %>g</li>
                <li>Total Carbs: <%= recipe.total_carbohydrate %>g</li>
                <li>Dietary Fiber: <%= recipe.dietary_fiber %>g</li>
                <li>Sugars: <%= recipe.sugars %>g</li>
                <li>Protein: <%= recipe.protein %>g</li>
                <li>Cholesterol: <%= recipe.cholesterol %>mg</li>
                <li>Sodium: <%= recipe.sodium %>mg</li>
                <li>Potassium: <%= recipe.potassium %>mg</li>
              </ul>
              <button class="details-button" data-recipe_name="<%= recipe.recipe_name.replace(' ', '_') %>">Details</button>
              <form method="post" action="/recipe/<%= recipe.id %>" class="hide <%= recipe.recipe_name.replace(' ', '_') %>">
                <input type="hidden" name="_method" value="delete">
                <button type="submit">Delete</button>
              </form>
            </li>
          <% }); %>
        </ul>
      </section>
      <aside class="right">
        <p>Right aside.</p>
        <%# include('../layout/ads') %>
      </aside>
    </main>
    <footer>
      <%# include('../layout/footer') %>
    </footer>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="../scripts/app.js"></script>
  </body>
</html>